<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderSystem.Xamarin.Views.UserCartItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding MenuItem.ItemName}" FontSize="Medium"/>
        <Label Text="{Binding MenuItem.Price}" FontSize="Small"/>
        <StackLayout Orientation="Horizontal">

            <Button Text="Add another"
                Clicked="AddToCart_Clicked"
                BackgroundColor="CadetBlue"
                TextColor="White"
                />
            
            <Button Text="Delete"
                Clicked="DeleteFromCart_Clicked"
                BackgroundColor="Red"
                TextColor="White"
                />

        </StackLayout>
    </StackLayout>

</ContentPage>